<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><%= sortable "name" %></th>
      <th scope="col"><%= sortable "school_year" %></th>
      <th scope="col"><%= sortable "year" %></th>
      <th scope="col"><%= sortable "schedule_class" %></th>
      <th scope="col"><%= sortable "semester" %></th>
      <th scope="col"><%= sortable "version" %></th>
      <th scope="col"><%= sortable "course" %></th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <% cache schedule do %>
        <tr>
          <td><%= link_to schedule.name, schedule %></td>
          <td><%= schedule.school_year %></td>
          <td><%= schedule.year %></td>
          <td><%= schedule.schedule_class %></td>
          <td><%= schedule.semester %></td>
          <td><%= schedule.version %></td>
          <td><%= link_to schedule.course.name,schedule.course %></td>
          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
          <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path, class: "btn btn-dark"  %>
