<%= form_with(model: schedule, local: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :school_year, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :school_year, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :year, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :year, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :schedule_class, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :schedule_class, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :semester, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :semester, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :version, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :version, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :course_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:schedule, :course_id, Course.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', schedules_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
