<div class="text-center container mt-5">
  <div class="card mb-4">

    <div class="text-center mb-4">
      <span class="display-4 font-weight-normal">Log in</span>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <div class="row justify-content-md-center">
        <div class="mb-4 col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required:"", class:"form-control" %>
        </div>
      </div>
      
      <div class="row justify-content-md-center">
        <div class="mb-4 col-6">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required:"" , class:"form-control" %>
        </div>
      </div>    

      <!-- 
        <% if devise_mapping.rememberable? %>
          <div class="row justify-content-md-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      -->
        <div class="actions row justify-content-md-center">
          <%= f.submit "Log in", class:"btn btn-dark btn-lg col-6 mb-4" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>