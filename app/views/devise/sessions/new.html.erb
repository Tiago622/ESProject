<div class="container mt-4">
  <div class="text-center mb-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="text-center mb-4">
        <h1 class=" font-weight-normal">Log in</h1>
      </div>

      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required:""%>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required:""%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>