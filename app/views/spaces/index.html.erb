<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Department</th>
      <th scope="col">Type of space</th>
      <th scope="col">Capacity</th>
      <th scope="col">Availability</th>
      <th scope="col">Equipment</th>
      <th scope="col" colspan="3">Option</th>

    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= link_to space.name, space %></td>
        <td><%= space.description %></td>
        <td><%= space.department %></td>
        <td><%= space.type_of_space %></td>
        <td><%= space.capacity %></td>
        <td><%= space.availability %></td>
        <td><%= space.equipment %></td>        
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Space', new_space_path, class:"btn btn-dark" %>