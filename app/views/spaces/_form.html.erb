<%= form_with(model: space, local: true) do |form| %>
  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :department, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field  :department, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :type_of_space, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :type_of_space, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :capacity, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :capacity, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :availability, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.check_box :availability, class: "form-control btn", style:"width:24px;height:24px;" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :equipment, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :equipment, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', spaces_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
