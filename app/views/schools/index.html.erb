<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">School name</th>
      <th scope="col">Acronym</th>
      <th scope="col">Complete address</th>
      <th scope="col">Organic unit</th>
      <th scope="col" colspan="3">Option</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.acronym %></td>
        <td><%= school.address %></td>
        <td><%= school.organic_unit.acronym %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>