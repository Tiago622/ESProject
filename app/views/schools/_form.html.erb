<%= form_with(model: school, local: true) do |form| %>
  <% if school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
      <% school.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :acronym, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :acronym, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :organic_unit_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:school, :organic_unit_id, OrganicUnit.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', schools_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
