<!-- MODAL -->
<button class="btn btn-sm btn-secondary" type="button" data-toggle="modal" data-target="#exampleModal">
    Search space...
</button>
<div class="modal fade " id="exampleModal" tabIndex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Space name:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= form_for :search_spaces, url:search_spaces_path, method: :get do |form|%>
                    <%= form.text_field :name, class:"form-control mr-sm-2", placeholder:"Example: B255" %>

                    <div class="modal-footer actions">
                        <%= form.submit "Search", class:"btn btn-dark" %>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>                   
                <% end %>
            </div>
        </div>
    </div>
</div>