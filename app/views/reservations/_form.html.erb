<%= form_with(model: reservation, local: true) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :reason, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :reason, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :state, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :state, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :date, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.date_select :date,
       { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30 },
        { class: 'form-control pull-left', style: 'width: 10%; margin-right: 10px;' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :start_time, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.time_select :start_time,
       { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15 },
        { class: 'form-control pull-left', style: 'width: 10%; margin-right: 10px;' } %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :end_time, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.time_select :end_time,
       { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30 },
        { class: 'form-control pull-left', style: 'width: 10%; margin-right: 10px;' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :person_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:reservation, :person_id, Person.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :space_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:reservation, :space_id, Space.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', reservations_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
