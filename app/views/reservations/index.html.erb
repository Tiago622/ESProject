<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><%= sortable "reason" %></th>
      <th scope="col"><%= sortable "state" %></th>
      <th scope="col"><%= sortable "date" %></th>
      <th scope="col"><%= sortable "start_time" %></th>
      <th scope="col"><%= sortable "end_time" %></th>
      <th scope="col"><%= sortable "person" %></th>
      <th scope="col"><%= sortable "space" %></th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <% cache reservation do %>
        <tr>
          <td><%= reservation.reason %></td>
          <td><%= reservation.state %></td>
          <td><%= reservation.date %></td>
          <td><%= reservation.start_time.strftime("%I:%M%p") %></td>
          <td><%= reservation.end_time.strftime("%I:%M%p") %></td>
          <td><%= reservation.person.name %></td>
          <td><%= reservation.space.name %></td>
          <td><%= link_to 'Show', reservation %></td>
          <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
          <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-dark" %>
