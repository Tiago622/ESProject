<%= form_with(model: discipline, local: true) do |form| %>
  <% if discipline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discipline.errors.count, "error") %> prohibited this discipline from being saved:</h2>

      <ul>
      <% discipline.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :course_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:discipline, :course_id, Course.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', disciplines_path, class: "btn btn-secondary" %>
    <%= form.submit :class => "btn btn-dark" %>
  </div>
<% end %>
