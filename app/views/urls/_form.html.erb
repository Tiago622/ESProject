<%= form_with(model: url, local: true) do |form| %>
  <% if url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :url, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :school_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
       <%= collection_select(:url, :course_id, Course.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', urls_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
