<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :school_name, class: "col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= collection_select(:course, :school_id, School.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>
  </div>

  <div class="actions">
    <%= link_to 'Back', courses_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
