<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @organic_unit.name %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @organic_unit.acronym %>
</p>

<h5>Schools from this Organic Unit</h5>

<ul class="list-group list-group-horizontal mb-3">
  <% @organic_unit.schools.each do |school| %>
    <li class="list-group-item list-group-item-dark"><%= school.name %></li>
  <% end %>
</ul>  

<br>
<%= link_to 'Back', organic_units_path, class: "btn btn-secondary" %>
<%= link_to 'Edit', edit_organic_unit_path(@organic_unit), class: "btn btn-dark" %>