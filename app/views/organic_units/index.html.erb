<p id="notice"><%= notice %></p>

<h1>Organic Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Acronym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organic_units.each do |organic_unit| %>
      <tr>
        <td><%= organic_unit.name %></td>
        <td><%= organic_unit.acronym %></td>
        <td><%= link_to 'Show', organic_unit %></td>
        <td><%= link_to 'Edit', edit_organic_unit_path(organic_unit) %></td>
        <td><%= link_to 'Destroy', organic_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

